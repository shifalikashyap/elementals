<%= form_with model: @company do |form| %>


  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control form-control-lg" %>
    <% @company.errors.full_messages_for(:name).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :about %>
    <%= form.text_field :about, class: "form-control form-control-lg" %>
    <% @company.errors.full_messages_for(:about).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, class: "form-control form-control-lg" %>
    <% @company.errors.full_messages_for(:city).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>


  <div class="form-group">
    <%= form.label :country %>
    <%= form.text_field :country, class: "form-control form-control-lg" %>
    <% @company.errors.full_messages_for(:country).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>


  <div class="form-group">
    <%= form.label :size %>
    <%= form.select :size, options_for_select(Company::COMPANY_SIZES, selected: @company.size), {prompt: 'Select Company type'}, {class: 'form-control form-control-lg rounded-0'} %>
    <% @company.errors.full_messages_for(:company_size).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>