<%= form_with model: @student do |form| %>


  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control form-control-lg" %>
    <% @student.errors.full_messages_for(:name).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>


  <div class= "form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control form-control-lg"  %>
    <% @student.errors.full_messages_for(:email).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>


  <div class="form-group">
    <%= form.label :current_status %>
    <%= form.text_field :current_status, class: "form-control form-control-lg"  %>
    <% @student.errors.full_messages_for(:current_status).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>


  
  <div class="form-group">
    <%= form.label :contact_number %>
    <%= form.text_field :contact_number, class: "form-control form-control-lg" %>
    <% @student.errors.full_messages_for(:contact_number).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :alternate_contact_number %>
    <%= form.text_field :alternate_contact_number, class: "form-control form-control-lg"%>
    <% @student.errors.full_messages_for(:alternate_contact_number).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>


  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control form-control-lg" %>
    <% @student.errors.full_messages_for(:address).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth, class: "form-control form-control-lg" %>
    <% @student.errors.full_messages_for(:date_of_birth).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>
      
  <label for="validationTooltip01">Passport Photo</label>
  <div class="custom-file">
    <%= form.label :passport_photo, for: "student_passport_photo", class: "custom-file-label" %>
    <%= form.file_field :passport_photo, class: "custom-file-input form-control form-control-lg"  %>
    <% @student.errors.full_messages_for(:passport_photo).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>

<!-- 
  <div class="custom-file">
    <input type="file" class="custom-file-input" id="customFile">
    <label class="custom-file-label" for="customFile">Choose file</label>
  </div> -->

  <div class="form-group">
    <%= form.label :college %>
    <%= form.text_field :college, class: "form-control form-control-lg"%>
    <% @student.errors.full_messages_for(:college).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>