<div class="col-lg-10 mt-3">

<%= search_form_for @q do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name_cont, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email_cont, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :role %>
    <%= form.text_field :role_cont, class:"form-control" %>
  </div>

  <div class="form-group">
  <%= form.label :company_name %>
  <%= form.search_field :company_name_cont, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Reset', users_path, class: "btn btn-success" %>
  </div>

<% end %>


<h1>All Users</h1>

<%= link_to 'New User', new_user_path, class: "btn btn-primary btn-lg", data: { toggle: 'modal', target: '#newUserModal', remote: true } %>

  <table class ="table table-bordered mt-5">
    <thead>
      <tr>
        <th>Name</th>
        <th>Role</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>  
    <tbody id="usersTable">
      <% @users.each do |user| %>
      <%= render 'user_row', user: user %>
      <% end %>
    </tbody>
  </table>

<%= paginate @users %>
  <div class="modal fade" id="newUserModal" tabindex="-1" role="dialog"aria-labelledby="newUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newUserModalLabel">Create New User</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div id="newUserform">
        </div>
      </div>
    </div>
  </div>


  <div class="modal fade" id="editUserModal" tabindex="-1" role="dialog"aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editUserModalLabel">Edit User</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div id="editUserform">
        </div>
      </div>
    </div>
  </div>


  <div class="modal fade" id="showUserModal" tabindex="-1" role="dialog"aria-labelledby="showUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="showUserModalLabel">User Details</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div id="showUserDetails">
        </div>
      </div>
    </div>
  </div>


</div>


