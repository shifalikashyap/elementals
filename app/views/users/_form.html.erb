
<%= form_with model: @user do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control form-control-lg" %>
    <% @user.errors.full_messages_for(:name).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :role %>
    <%= form.text_field :role, class: "form-control form-control-lg" %>
    <% @user.errors.full_messages_for(:role).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control form-control-lg" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>


  <div class="form-group">
    <%= form.label :company_id %>
    <%= form.select :company_id, options_for_select(Company.all.map {|company| [company.name, company.id]}, selected: @user.company_id), {prompt: 'Select Company'}, {class: 'form-control form-control-lg rounded-0'} %>
    <% @user.errors.full_messages_for(:company_id).each do |message| %>
    <p class="text-danger"><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>